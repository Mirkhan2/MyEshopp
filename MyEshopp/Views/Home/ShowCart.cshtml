@model Order
@{
    ViewData["Title"] = "Warenkorb";
}

@if (Model != null)
{
    <table class=" table table-striped">
        <thead class=" thead-dark">
            <tr>
                <th> kalaitem</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Count</td>
                    <td>@(item.Count *  item.Price)</td>
                    <td>
                        <a asp-action="RemoveCart" asp-route-detailId="@item.DetailId">Delete</a>
                    </td>
                </tr>

            }
        </tbody>

    </table>
    <h5>Sum : @Model.OrderDetails.Sum(s=>s.Count * s.Price)</h5>

}
else
{
    <div  class=" alert alert-danger">NoOrder</div>

}

