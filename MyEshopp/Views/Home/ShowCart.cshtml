@model CartViewModel
@{
    ViewData["Title"] = "Warenkorb";
}

<table class=" table table-striped">
    <thead class=" thead-dark">
     <tr>
            <th>Cartya item</th>
            <th>Quantity</th>
            <th>Price</th>
     </tr>
    </thead>
   <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.getTotalPrice()</td>
                <td>
                    <a asp-action="RemoveCart" asp-route-itemId ="@item.Item.Id" >Delete</a>
                </td>
            </tr>

        }
   </tbody>

</table>
<h5>Sum : @Model.OrderTotal</h5>

