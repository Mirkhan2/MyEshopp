@page
@model MyEshopp.Pages.Admin.IndexModel
@{
	ViewData["Title"] = "Index";
}
<h1>Catalog</h1>
<hr />
<p>
	<a asp-page="Add" class="myButton"> Add Kala</a>
</p>
<table>
	<thead>
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th>Price</th>
			<th>DAStorat del edit</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.products)
		{
			<tr>
				<td>
					<img src="/images/@(item.Id).jpg" style="max-width : 200px;border :1px solid gray ; padding : 3px"/>  
				</td>

				<td>
					@item.Name
				</td>
				<td>
					@item.Item.Price
				</td>
				<td>
					<a asp-page="Edit" asp-route-id="@item.Id" >Edit</a>
					<a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
					
					<a>Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
